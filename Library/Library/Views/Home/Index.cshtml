@{
    ViewData["Title"] = "Lakeview Library";
}

<h3>@ViewData["Title"]</h3>

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card-expand" id="catalog">
                <h2 class="mdl-card__title-text homelabel">Library Catalog</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and Manage library assets. 
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Catalog" asp-action="Index">
                    View Catalog
                    </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card-expand" id="patrons">
                <h2 class="mdl-card__title-text homelabel">Patrons</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View Patron Index.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Patron" asp-action="Index">
                    View Patrons
                </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card-expand" id="branches">
                <h2 class="mdl-card__title-text homelabel">Branches</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View Library branches.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Branch" asp-action="Index">
                    View Branch Index
                </a>
            </div>
        </div>
    </div>
</div>
